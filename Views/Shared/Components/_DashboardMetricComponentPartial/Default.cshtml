@model List<MyPortfolyo.Dal.Entities.DashboardMetric>



<div class="content">
    <div class="container-fluid">
        <h2 class="mt-4">Dashboard Metrics</h2>

        <div class="row">
            @foreach (var metric in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">@metric.Title</h4>
                        </div>
                        <div class="card-body">
                            <h5><b>@metric.Value @metric.Unit</b></h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
