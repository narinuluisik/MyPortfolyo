@model List<MyPortfolyo.Dal.Entities.Testimonial>

<div class="s-testimonials" id="testimonial">
    <div class="overlay"></div>
    <div class="row testimonials-header">
        <div class="col-full">
            <h1 class="h02">Referanslarım</h1>
        </div>
    </div>
    <div class="row testimonials">
        <div class="col-full testimonials__slider">
            <div class="testimonials__wrapper" style="display: flex; flex-wrap: wrap; justify-content: space-between;">
                @foreach (var item in Model)
                {
                    <div class="testimonials__slide" style="flex: 1 1 calc(33.33% - 20px); margin-bottom: 20px; box-sizing: border-box;">
                        <img src="@item.ImageUrl" alt="@item.NameSurname" class="testimonials__avatar" style="border-radius: 50%; width: 80px; height: 80px; object-fit: cover; margin-bottom: 15px;">
                        <p>@item.Description</p>
                        <div class="testimonials__author h06">
                            @item.NameSurname
                            <span>@item.Title</span>
                        </div>
                    </div>
                }
            </div> <!-- end testimonials__wrapper -->
        </div> <!-- end testimonials__slider -->
    </div> <!-- end testimonials -->
</div>
