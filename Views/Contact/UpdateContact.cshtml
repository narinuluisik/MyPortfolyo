@model MyPortfolyo.Dal.Entities.Contact

@{
    ViewData["Title"] = "İletişim Bilgisi Güncelle";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container mt-4">
    <h4 class="text-primary">@ViewData["Title"]</h4>
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <form asp-action="UpdateContact" method="post">
                <input type="hidden" asp-for="ContactId" />
                <div class="form-group">
                    <label asp-for="Title">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" required />
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Description">Açıklama</label>
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Phone1">Telefon 1</label>
                    <input type="text" class="form-control" asp-for="Phone1" required />
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Phone2">Telefon 2</label>
                    <input type="text" class="form-control" asp-for="Phone2" />
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Email1">E-posta 1</label>
                    <input type="email" class="form-control" asp-for="Email1" required />
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Email2">E-posta 2</label>
                    <input type="email" class="form-control" asp-for="Email2" />
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Address">Adres</label>
                    <textarea class="form-control" asp-for="Address" rows="2"></textarea>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a href="/Contact/ContactList" class="btn btn-secondary">Geri</a>
                </div>
            </form>
        </div>
    </div>
</div>
