@model List<MyPortfolyo.Dal.Entities.Skill>

@{
    ViewData["Title"] = "Skill List";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title text-primary">Beceri Bölümü</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title m-0" style="color: white;">Beceri Listesi</h5>
                        <a href="/Skill/CreateSkill" class="btn btn-light btn-sm">Yeni Beceri Ekle</a>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">
                            Beceri bölümü ile ilgili düzenleme, güncelleme ve silme işlemlerini buradan yapabilirsiniz.
                        </p>
                        <table class="table table-hover mt-3">
                            <thead class="table-secondary">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Beceri Başlığı</th>
                                    <th scope="col">Değer</th>
                                    <th scope="col" class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var skill in Model)
                                {
                                    <tr>
                                        <td>@skill.SkillId</td>
                                        <td>@skill.Title</td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" style="width: @skill.Value%;"
                                                     aria-valuenow="@skill.Value" aria-valuemin="0" aria-valuemax="100">
                                                    @skill.Value%
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <a href="/Skill/UpdateSkill/@skill.SkillId" class="btn btn-sm btn-outline-success me-1">Güncelle</a>
                                            <a href="/Skill/DeleteSkill/@skill.SkillId" class="btn btn-sm btn-outline-danger delete-button">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.delete-button').forEach(button => {
        button.addEventListener('click', function (e) {
            if (!confirm("Bu beceriyi silmek istediğinize emin misiniz?")) {
                e.preventDefault();
            }
        });
    });
</script>
