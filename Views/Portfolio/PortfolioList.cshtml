@model List<MyPortfolyo.Dal.Entities.Portfolio>

@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title text-primary">Portföy Bölümü</h4>
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="font-weight-bold">Portföy Listesi</h5>
                    <a href="/Portfolio/CreatePortfolio" class="btn btn-outline-primary">Yeni Portföy Ekle</a>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card border-0 rounded-lg shadow">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title">@item.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.SubTitle</h6>
                            <p class="card-text">@item.Description</p>
                            <a href="@item.Url" class="btn btn-primary" target="_blank">Projeye Git</a>
                            <div class="mt-2">
                                <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-sm btn-outline-success me-1">Güncelle</a>
                                <a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-sm btn-outline-danger delete-button">Sil</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.delete-button').forEach(button => {
        button.addEventListener('click', function (e) {
            if (!confirm("Bu öğeyi silmek istediğinize emin misiniz?")) {
                e.preventDefault();
            }
        });
    });
</script>
